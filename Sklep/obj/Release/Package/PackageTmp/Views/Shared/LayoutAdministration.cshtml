@{
    if (@ViewBag.is_Admin == "False")
    {
        Response.Redirect(@Url.Action("Index", "Home"));
    }
}
<body>
    <div class="container-fluid container--admin">
        <div class="row">
            <div class="admin_leftSide  col-md-2 ">
                <ul class="list-unstyled admin_leftSide_list">
                    <li class="admin_leftSide_list_title">
                        <a href="@Url.Action("Index", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect admin_leftSide_list_button admin_leftSide_list_buttonFirst">
                            Panel administracyjny
                        </a>
                    </li>

                    <li class="">
                        <a href="@Url.Action("ZamowieniaDoRealizacji", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Zamówienia do realizacji
                        </a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("ZamowieniaWszystkie", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Wszystkie zamówienia
                        </a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("Produkty", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Produkty
                        </a>
                    </li>

                    <li class="">
                        <a href="@Url.Action("Klienci", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Klienci
                        </a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("Komentarze", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Komentarze
                        </a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("Dostawy", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Dostawa
                        </a>

                    </li>
                    <li class="">
                        <a href="@Url.Action("Scraper", "Admin")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Scraper
                        </a>

                    </li>
                    <li class="">
                        <a href="@Url.Action("Index", "Home")" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect  admin_leftSide_list_button admin_leftSide_list_buttonOther">
                            Powrót do sklepu
                        </a>

                    </li>
                </ul>
            </div>
            <div class="container--admin_rightSide col-md-10">
                @RenderBody()
            </div>
            
        </div>
    </div>


  






    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
