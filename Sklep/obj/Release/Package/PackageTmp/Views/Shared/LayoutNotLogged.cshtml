    <script>
        $(function () {

            var linkToDetail = document.getElementById("linkToDetail").innerHTML;
            linkToDetail = linkToDetail.slice(0, -1);

            $("input#searchProduct").autocomplete({
                source: function (request, response) {
                    var categorySelected = $('[id*=categorySelected]').val();
                    $.ajax({
                        url: '/Produkt/SzukajZPodopowiedziami',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ productName: request.term, categoryID: categorySelected }),
                        success: function (data) {
                            response($.map(data, function (item) {
                                if (item.ProductID == -1)
                                {
                                    return {
                                        label: item.ProductName,
                                        value: "#",
                                        price: ""
                                    }
                                }
                                return {
                                    label: item.ProductName,
                                    value: linkToDetail + "?productID=" + item.ProductID,
                                    price: item.PriceB
                                }
                            }))
                        },
                        error: function (response) {
                            alert("error" + response.responseText);
                        },
                        failure: function (response) {
                            alert("failuter" + response.responseText);
                        },
                    });
                },

                select: function (event, ui) {
                    if (ui.item.value == "#") {
                        return;
                    }
                    window.location.href = ui.item.value;
                },
                minLength: 2


            }).autocomplete("instance")._renderItem = function (ul, item) {
            
                return $("<li>")
                    .append('<div class="searchSuggestion">' + item.label + '<b class="searchSuggestionPrice" > &thinsp;' + item.price + "</b></div>")
                    .appendTo(ul);
            };

            // logowanie
            $("#signINButton").click(function () {
                var login = document.getElementById("signINLogin").value;
                var password = document.getElementById("signINPassword").value;
                var pattern = /(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,200}/;
                if (login.length < 4) {
                    document.getElementById("contentModal").innerHTML = "Niepoprawny login lub hasło";
                    document.getElementById("contentModal").style.color = "red";
                    return;
                }

                if (!pattern.test(password)) {
                    document.getElementById("contentModal").innerHTML = "Niepoprawny login lub hasło";
                    return;
                }

                $.post("/Logowanie/Logowanie",
                    {
                        Login: login,
                        Password: password
                    },
                    function (data, status) {
                        if (data == "OK") {
                            window.location.href = "/Home/Index";
                        }
                        else {
                            document.getElementById("contentModal").innerHTML = "Niepoprawny login lub hasło";
                        }
                    });
            });

            //rejestracja
            $("#registerButton").click(function () {
                var login = document.getElementById("registerLogin").value;
                var newPassword = document.getElementById("registerNewPassword").value;
                var repeatPassword = document.getElementById("registerRepeatPassword").value;
                var email = document.getElementById("registerEmail").value;
                var checkStatue = document.querySelector('#checkboxStatute').checked;;
                var pattern = /(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,200}/;
                var patternEmail = /[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?/;
                var contentModal = "";
                var failDisplay = false;

                if (login.length < 4) {
                    contentModal += "<li>Login musi liczyć minimum 4 znaki</li>";
                    failDisplay = true;
                }

                if (!pattern.test(newPassword)) {
                    contentModal += "<li>Hasło musi liczyć od 8 do 200 znaków oraz składać się z conajmniej jednej wielkiej litery, jednej małej litery oraz cyfry</li>";
                    failDisplay = true;
                }
