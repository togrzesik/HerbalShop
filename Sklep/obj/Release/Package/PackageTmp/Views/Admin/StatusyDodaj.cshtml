@model Sklep.Models.db.Statuses
@{
    ViewBag.Title = "Panel administratora";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm("StatusyDodaj", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-inline">
        Nazwa: @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.StatusID)
        <input type="submit" class="btn btn-default" value="Zapisz" />
    </div>
}